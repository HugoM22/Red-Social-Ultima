extends layout

block content
  .container.py-4
    h1.mb-4= album.titulo

    a.btn.btn-secondary.mb-3(href='/') ← Volver al home

    if imagenes.length
      .row
        each img in imagenes
          .col-lg-4.col-md-6.col-sm-12.mb-4
            .card
              img.card-img-top(
                src= img.archivo,
                alt= img.titulo,
                style="height:200px; object-fit:cover;"
              )
              .card-body
                h5.card-title= img.titulo
                if img.descripcion
                  p.card-text= img.descripcion
    else
      p.text-muted Este álbum no tiene imágenes todavía.