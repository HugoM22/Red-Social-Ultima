doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Artesanos.com
    link(
      rel="stylesheet",
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    )
    link(rel="stylesheet", href="/css/styles.css")

  body.bg-light
    // Navbar todas las vistas
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm
      .container-fluid
        a.navbar-brand(href="/") Artesanos.com
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon

        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.mx-auto
            li.nav-item.me-2
              a.btn.btn-outline-primary(href="/explorar") Explorar usuarios
            li.nav-item
              a.btn.btn-outline-success(href="/imagen/publicar") Publicar imagen

          ul.navbar-nav.ms-auto

            // Avatar 
            if session.usuarioId
              li.nav-item.d-flex.align-items-center.me-3
                a.d-flex.align-items-center.text-decoration-none(href=`/usuarios/perfil/${session.usuarioId}`)
                  img.rounded-circle.me-2(
                    src= session.avatarUrl || '/default-avatar.png',
                    alt="Avatar",
                    width="40",
                    height="40"
                  )
                  span.fw-semibold.text-dark #{session.usuarioNombre} #{session.usuarioApellido}

            li.nav-item.me-3
              a.nav-link(href=`/usuarios/perfil/${session.usuarioId}`)
                i.far.fa-user.me-1
                | Perfil

            li.nav-item.me-3
              a.nav-link.position-relative(href="/notificaciones")
                i.far.fa-bell.me-1.fs-4
                | Notificaciones
                span#notif-count.badge.bg-danger.text-white.rounded-pill.position-absolute.top-0.start-100.translate-middle.p-2(
                  style= pendingNotificationsCount > 0 ? '' : 'display:none'
                )= pendingNotificationsCount || 0

            li.nav-item.me-3
              a.nav-link(href="/configuracion")
                i.fas.fa-cog.me-1
                | Configuración

            li.nav-item
              a.nav-link.text-danger(href="/logout")
                i.fas.fa-sign-out-alt.me-1
                | Cerrar sesión

    // contenedor global de toasts
    div#toast-container.toast-container.position-fixed.bottom-0.end-0.p-3(style="z-index: 1055;")

    block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="/socket.io/socket.io.js")

    script.
      window.SESSION_USER_ID = !{JSON.stringify(session.usuarioId || null)};


    script(src="/js/notifications.js")



