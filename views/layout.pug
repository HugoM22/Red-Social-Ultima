doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Artesanos.com
    link(
      rel="stylesheet",
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    )
  body.bg-light
    //– Navbar común a todas las vistas
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm
      .container-fluid
        a.navbar-brand(href="/") Artesanos.com
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.mx-auto
            li.nav-item.me-2
              a.btn.btn-outline-primary(href="/explorar") Explorar usuarios
            li.nav-item
              a.btn.btn-outline-success(href="/imagen/publicar") Publicar imagen
          ul.navbar-nav.ms-auto
            li.nav-item.me-3
              a.nav-link(href=`/usuarios/perfil/${session.usuarioId}`)
                i.far.fa-user.me-1
                | Perfil
            li.nav-item.me-3
              a.nav-link.position-relative(href="/notificaciones")
                i.far.fa-bell.me-1
                | Notificaciones
                if pendingFriendCount > 0
                  //– Este span es el círculo rojo
                  span.position-absolute.top-0.start-100.translate-middle.p-1.bg-danger.rounded-circle
                  //– Este span muestra el número
                  span.position-absolute.top-0.start-100.translate-middle.text-white.small= pendingFriendCount
            li.nav-item.me-3
              a.nav-link(href="/configuracion")
                i.fas.fa-cog.me-1
                | Configuración
            li.nav-item
              a.nav-link.text-danger(href="/logout")
                i.fas.fa-sign-out-alt.me-1
                | Cerrar sesión

    //– Aquí va el contenido específico de cada página
    block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
